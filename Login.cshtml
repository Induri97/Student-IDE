@model Student_Courses.Models.UserInfo


<!DOCTYPE html>
<header style="background: linear-gradient(to right, #2c3e50, #3498db); color: #fff; text-align: center; padding: 15px;">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-grey border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div>
                <a href="@Url.Action("About", "UserInfo")" style= "color: #fff">ABOUT US</a>
            </div>

        </div>
    </nav>
    <h1>Welcome to Course Registration</h1>
</header>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        .custom-textbox {
            width: 500px; 
        }
        .button-container {
    text-align: center;
}
    </style>
</head>

<br>
<body>
    <div style="display: flex; justify-content: center;">
    @using (Html.BeginForm("Login", "UserInfo", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control custom-textbox", required = "required", type = "email" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control custom-textbox", required = "required" })
                
            </div>
        </div>
        <br />
            <div>
                @if(ViewBag.AccountError!=null)
                {
                    <center><p style="color: red";>@ViewBag.AccountError</p></center>
                }
            </div>
            <div class="button-container">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
    }
    </div>
    <br />
        <div style="display: flex;justify-content: center">
            <p>New user? <a href="@Url.Action("RegisterUser", "UserInfo")">Register here</a>.</p>
        </div>
</body>
</html>
